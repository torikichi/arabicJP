<h1><%= params[:titleWrd] %>：対義語登録/修正</h1>
<div class="container">
<% if logged_in? %>
<div class="col-md-6 col-md-offset-3">
  <ul class="nav nav-tabs">
  	<% params[:id] ||= @relation.word_id %>
    <li><%= link_to "単語", edit_word_path(params[:id], :exp_flg => params[:exp_flg]) %></li>
    <% if @relations.present? %>
      <li><%= link_to "類義語", edit_relation_path(params[:id], titleWrd: params[:titleWrd], :exp_flg => params[:exp_flg], :plural_flg => params[:plural_flg]) %></li>
    <% else %>
      <li><%= link_to "類義語", new_relation_path(params[:id], titleWrd: params[:titleWrd], :exp_flg => params[:exp_flg], :plural_flg => params[:plural_flg]) %></li>
    <% end %>
    <li class="active"><%= link_to "対義語", "#" %></li>
    <% if params[:plural_flg] == "1" %>
      <li><a href="#">複数形登録</a></li>
    <% end %>
  </ul>

  <% if @relations.present? %>
    <%= render partial: 'syn_detail', locals: {relations: @relations} %>
  <% else %>
    <section id="syn_detail">
	  <h4>・現在、対義語なし</h4>
	</section>	
  <% end %>

  <%= render partial: 'relations/antonym_form', locals: {relation: @relation} %>

</div>
<% else %>
  変更/修正を行うときはログインしてください。
<% end %>
</div>

<%= render 'relations/tooltips' %>