<div class="row">
  <%= form_tag(add_synonym_relation_path(:id => kbn), method: "get") do %>
  	<fieldset id="srchSynField">
  	  <%= text_field_tag(:srchSyn, "", autofocus:true) %>
  	  <%= submit_tag("検索", class:"btn btn-primary") %>
  	  <input type="button" value="close" class="pull-right" onclick="window.close();">
  	</fieldset>
  <% end %>
</div>

<div class="row">
  <% if !@relations.nil? %>
    <table class="table results">
    <thead>
    <tr>
      <th></th>
      <th>類義語分類名</th>
      <th>単語</th>
      <th>品詞</th>
      <th>意味</th>
    </tr>
    </thead>
    <%= render partial: 'relations/relations', locals: {relations: @relations} %>
    </table>
  <% end %>
</div>