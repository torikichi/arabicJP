<table id="each_word" class="pure-table fix_table">
  <caption>単語：</caption>
  <thead>
  <tr>
    <th>単語</th>
    <th>読み</th>
    <th>品詞</th>
    <th>意味</th>
  </tr>
  </thead>
  <tr>
  	<td><%= @choisedWord.word %></td>
  	<td><%= @choisedWord.word_with_pron%></td>
  	<td><%= @choisedWord.pos %></td>
  	<td><%= simple_format(@choisedWord.meaning) %></td>
  </tr>
</table>

<table id="appr_lesson" class="fix_table pure-table pure-table-horizontal">
  <caption>登場LESSON一覧：</caption>
  <thead>
  <tr>
  	<th>LV</th>
  	<th>科目</th>
  	<th>Lesson</th>
  	<th>Lesson名</th>
  </tr>
  </thead>
  <% @lessons.each do |lesson| %>
  <tr>
  	<td><%= lesson.lv %></td>
  	<td>
	  <% case lesson.category %>
	  <% when READ_NO %>
	    <%= CATE1 %>
	  <% when WRITE_NO %>
	  	<%= CATE2 %>
	  <% when CONVERSATION_NO %>
	  	<%= CATE3 %>
	  <% when GRAMMER_NO %>
	  	<%= CATE4 %>
	  <% when SUPPLEMENT_NO %>
	  	<%= CATE5 %>
	  <% end %>
  	</td>
  	<td>
  	  <%= lesson.lesson_no %>
  	  <% strSeq = lesson.lesson_seq != 0 ? " - "+lesson.lesson_seq.to_s : "" %>
  	  <%= strSeq %>
  	</td>
  	<td><%= link_to lesson.lesson_name, lesson_in_words_word_path(lesson.id) %></td>
  </tr>
  <% end %>
</table>