<!DOCTYPE html>
<html lang="ja">
<head>
  <title><%= page_titles(params[:action], params[:controller]) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta http-equiv="Content-Language" content="ja">
</head>
<body>
  <% flash.each do |message_type, message| %>
  	<div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

  <% isSub = (params[:action] == "antosub" or params[:action] == "synsub" or params[:action] == "add_synonym" or params[:action] == "opn_words_to_lesson" or params[:action] == "srch_words_to_lesson") %>
  <% if logged_in? && !isSub %>
  	<%= render 'layouts/header' %>
  <% end %>
<%= yield %>

</body>
</html>
