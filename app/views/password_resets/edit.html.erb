<h1 id="new_user_title">パスワード再設定</h1>
<%= form_for @user, :url => password_reset_path(@token), html: {class: "pure-form pure-form-stacked"} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2 id="toc-prohibited-this-user-from-being-saved"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
 
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <dl class="dl-horizontal">
    <dt>ユーザー名：</dt><dd><%= @user.name %></dd>
    <dt>Email：</dt><dd><%= @user.email %></dd>
    <dt>登録日時：</dt><dd><%= @user.created_at %></dd>
  </dl>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "パスワード変更", class: "pure-button pure-button-primary" %>
<% end %>
