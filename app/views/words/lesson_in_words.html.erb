<div class="container">
<section>
  <p>
    LV<%= @choisedLesson.lv %> ＞ 
    <% case @choisedLesson.category %>
    <% when READ_NO %>
      <%= CATE1 %>
    <% when WRITE_NO %>
      <%= CATE2 %>
    <% when CONVERSATION_NO %>
      <%= CATE3 %>
    <% when GRAMMER_NO %>
      <%= CATE4 %>
    <% when SUPPLEMENT_NO %>
      <%= CATE5 %>
    <% end %>
    ＞ LESSON <%= @choisedLesson.lesson_no %> - <%= @choisedLesson.lesson_seq %>
    </p>
    <h1><%= @choisedLesson.lesson_name %></h1>
</section>

<%= render 'shared/error_messages' %>

<%= page_entries_info @words %>

<% if logged_in? %>
  <%= link_to "単語を追加", new_appearance_path(params[:id]), class:"pull-right btn btn-default", remote: true %>
  <div id="appr_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<% end %>

<table class="table results">
  <thead>
  <tr>
    <th>単語</th>
    <th>読み</th>
    <th>品詞</th>
    <th>意味</th>
    <th>複数</th>
    <th>語根</th>
    <th>類</th>
    <th>対</th>
    <th>例</th>
    <% if logged_in? %>
      <th><!--削除用カラム--></th>
    <% end %>
  </tr>
  </thead>
  <%= render @words %>
</table>
<%= paginate @words %>
</div>

<% if logged_in? %>
<script type="text/javascript">
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
<% end %>